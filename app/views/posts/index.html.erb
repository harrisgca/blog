

  <div class="col-md-9">
    
<% @posts.each do |post| %>
  <p><h2><%= post.title %></h2></p>
  <p>Posted on <%= link_to post.created_at.strftime("%B %d, %Y"), post %> by <%= post.user.name %></p>

  <p><%= post.text.html_safe %></p>
  
   
  <% if user_signed_in? %>
    <p><%= link_to "Edit post", edit_post_path(post) %> | <%= link_to "Delete Post", post_path(post),
        method: :delete, data: { confirm: "Are you sure?" } %></p>
  <% else %>
  <% end %>

    <hr>
    <br>
 <% end %>
<%= paginate @posts %>
  </div>

  <div class="col-md-3">
   
    
    <p>RECENT POSTS</p>
    <p><% @recent_posts.each do |post| %>
      <li><%= link_to post.title, post %></li>
      <% end %>
    </p>
    <hr>

    <p><%= link_to "FULL ARCHIVES", archive_posts_path %></p>
    <hr>

    <div class="profile ">
      <p><%= image_tag("profileblackgray.jpg") %></p><hr>
    </div>    
    <div class="twitter">
      FOLLOW ME ON TWITTER
      <%= render 'widget' %>
    </div>


  </div>
</div>


